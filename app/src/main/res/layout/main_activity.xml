<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004000"
        android:gravity="center"
        android:text="Quản Lý Kho Vật Tư"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnInsertNhaCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Nhà Cung Cấp" />

    <Button
        android:id="@+id/buttonShowNhaCCList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem danh sách Nhà CC" />

    <Button
        android:id="@+id/buttonInsertVattu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Quản lý Vật tư" />

    <Button
        android:id="@+id/btnQLLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản Lí Loại" />
</LinearLayout>